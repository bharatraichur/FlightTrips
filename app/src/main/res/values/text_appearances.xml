<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="TextAppearance.TitleExtraLarge" parent="Base.TextAppearance">
        <item name="android:textSize">@dimen/t_title_extra_large</item>
    </style>

    <style name="TextAppearance.Title1" parent="Base.TextAppearance">
        <item name="android:textSize">@dimen/t_title_1</item>
    </style>

    <style name="TextAppearance.Title2" parent="Base.TextAppearance">
        <item name="android:textSize">@dimen/t_title_2</item>
    </style>

    <style name="TextAppearance.Headline" parent="Base.TextAppearance">
        <item name="android:textSize">@dimen/t_headline</item>
    </style>

    <style name="TextAppearance.Metadata" parent="Base.TextAppearance">
        <item name="android:textSize">@dimen/t_metadata</item>
    </style>

    <style name="TextAppearance.Title2.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Headline.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TitleExtraLarge.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.TitleExtraLarge.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Title2.Bold.Secondary">
        <item name="android:textColor">@color/color_secondary</item>
    </style>

    <style name="TextAppearance.Label" parent="Base.TextAppearance">
        <item name="android:textSize">@dimen/t_label</item>
    </style>

    <style name="TextAppearance.Label.Secondary">
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="TextAppearance.Label.Tertiary">
        <item name="android:textColor">@color/text_color_tertiary</item>
    </style>

    <style name="TextAppearance.Label.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Label.Flight">
        <item name="android:textColor">@color/text_color_flight_name</item>
    </style>

    <style name="TextAppearance.Label.Flight.Caps">
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Metadata.Tertiary">
        <item name="android:textColor">@color/text_color_tertiary</item>
    </style>

    <style name="TextAppearance.Metadata.Flight">
        <item name="android:textColor">@color/text_color_flight_name</item>
    </style>

    <style name="TextAppearance.Headline.White">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>